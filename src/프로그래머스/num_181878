class Solution {
    public int solution(String myString, String pat) {
        int answer = 0;
        
        // if (myString.toLowerCase().contains(pat.toLowerCase())) {
        //     answer = 1;
        // }
        
        String str_1 = myString.toLowerCase();
        String str_2 = pat.toLowerCase();
        
        if(str_1.indexOf(str_2) != -1) {
            answer = 1;
        }
        
        return answer;
    }
}
